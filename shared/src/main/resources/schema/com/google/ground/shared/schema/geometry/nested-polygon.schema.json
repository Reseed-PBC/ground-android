{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://groundplatform.org/schema/geometry/nested-polygon.schema.json",
  "title": "Polygon",
  "type": "object",
  "required": [
    "type",
    "shell"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "Polygon"
      ]
    },
    "shell": {
      "$ref": "https://groundplatform.org/schema/geometry/nested-linear-ring.schema.json"
    },
    "holes": {
      "type": "array",
      "items": {
        "$ref": "https://groundplatform.org/schema/geometry/nested-linear-ring.schema.json"
      }
    }
  }
}